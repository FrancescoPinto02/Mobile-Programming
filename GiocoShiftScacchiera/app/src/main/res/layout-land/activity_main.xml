<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="PintoFrancescoAlessandro"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:background="#03A9F4"
        android:textColor="@color/black"
        android:paddingTop="3dp"
        android:paddingBottom="15dp"
        />

    <TextView
        android:id="@+id/shiftCounterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameTextView"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="50dp"
        android:text="1"
        android:background="#FFC107"
        android:textSize="50sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="120dp"
        android:paddingHorizontal="20dp"/>

    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:rowCount="3">

        <TextView
            android:id="@+id/cell1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="1"
            android:textSize="30dp"
            android:background="#03A9F4"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_margin="2dp"
            />

        <TextView
            android:id="@+id/cell2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="2"
            android:textSize="30dp"
            android:background="#03A9F4"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_margin="2dp"
            />

        <TextView
            android:id="@+id/cell3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="3"
            android:textSize="30dp"
            android:background="#03A9F4"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_margin="2dp"
            />

        <TextView
            android:id="@+id/cell4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="4"
            android:textSize="30dp"
            android:background="#03A9F4"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_margin="2dp"
            />

        <TextView
            android:id="@+id/cell5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="5"
            android:textSize="30dp"
            android:background="#03A9F4"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_margin="2dp"
            />

        <TextView
            android:id="@+id/cell6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="6"
            android:textSize="30dp"
            android:background="#03A9F4"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_margin="2dp"
            />

        <TextView
            android:id="@+id/cell7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="7"
            android:textSize="30dp"
            android:background="#03A9F4"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_margin="2dp"
            />

        <TextView
            android:id="@+id/cell8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="8"
            android:textSize="30dp"
            android:background="#03A9F4"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_margin="2dp"
            />

        <TextView
            android:id="@+id/cell9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="9"
            android:textSize="30dp"
            android:background="#03A9F4"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_margin="2dp"
            />
    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/buttonGrid"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/up1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/up2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/up3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/buttonGrid"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/down1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/down2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/down3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/buttonGrid"
        android:layout_alignTop="@+id/buttonGrid"
        android:layout_marginTop="7dp">

        <Button
            android:id="@+id/left1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/left2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/left3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/buttonGrid"
        android:layout_alignTop="@+id/buttonGrid"
        android:layout_marginTop="7dp">

        <Button
            android:id="@+id/right1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/right2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20dp" />

        <Button
            android:id="@+id/right3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VINCI!"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="30dp"
        android:onClick="winGameNow"/>


</RelativeLayout>