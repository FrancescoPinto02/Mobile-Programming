<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2C2929"
    android:orientation="vertical">

    <TextView
        android:id="@+id/displayMain"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#29BF0F"
        android:textSize="50dp"
        android:layout_margin="20dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="5dp"
        android:text="0"
        android:textAlignment="textEnd" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#2C2929"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_marginVertical="40dp">

        <Button
            android:id="@+id/buttonC"
            android:onClick="clearClick"
            android:text="C"
            android:backgroundTint="#ff0000"
            android:layout_margin="10dp"
            android:textSize="25dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/buttonAC"
            android:onClick="clearClick"
            android:text="AC"
            android:backgroundTint="#ff0000"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/buttonMod"
            android:onClick="operatorClick"
            android:text="%"
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/buttonMul"
            android:onClick="operatorClick"
            android:text="X"
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/button7"
            android:onClick="numClick"
            android:text="7"
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/button8"
            android:onClick="numClick"
            android:text="8"
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/button9"
            android:onClick="numClick"
            android:text="9"
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/buttonDiv"
            android:onClick="operatorClick"
            android:text="/"
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/button4"
            android:onClick="numClick"
            android:text="4"
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/button5"
            android:onClick="numClick"
            android:text="5"
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/button6"
            android:onClick="numClick"
            android:text="6"
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/buttonSub"
            android:onClick="operatorClick"
            android:text="-"
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/button1"
            android:onClick="numClick"
            android:text="1"
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/button2"
            android:onClick="numClick"
            android:text="2"
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/button3"
            android:onClick="numClick"
            android:text="3"
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/buttonAdd"
            android:onClick="operatorClick"
            android:text="+"
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_rowSpan="2"
            android:layout_width="75dp"
            android:layout_height="160dp"/>

        <Button
            android:id="@+id/buttonDot"
            android:onClick="dotClick"
            android:text="."
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/button0"
            android:onClick="numClick"
            android:text="0"
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

        <Button
            android:id="@+id/buttonEq"
            android:onClick="equalClick"
            android:text="="
            android:backgroundTint="#9F6F7778"
            android:layout_margin="10dp"
            android:textSize="30dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>

    </GridLayout>

</LinearLayout>